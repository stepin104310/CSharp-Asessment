@model SampleMvcApp.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2 style="color: red">Are you sure you want to delete this?</h2>
    <div>
        <h3>Details of Employee:- </h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.EmployeeName)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.EmployeeAddress)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.EmployeeAddress)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.EmployeeSalary)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.EmployeeSalary)
